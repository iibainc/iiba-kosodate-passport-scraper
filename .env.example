# Project Configuration
PROJECT_NAME=iiba-kosodate-passport-scraper
ENVIRONMENT=development  # development | staging | production

# GCP Configuration
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=asia-northeast1

# Firestore
FIRESTORE_DATABASE_ID=(default)
FIRESTORE_SHOPS_COLLECTION=shops
FIRESTORE_HISTORY_COLLECTION=scraping_history

# Cloud Storage (バックアップ用)
GCS_BUCKET_NAME=your-bucket-name
GCS_CSV_PREFIX=csv_exports/

# Geocoding
# Google Maps API KeyはSecret Managerで管理
GOOGLE_MAPS_API_KEY_SECRET_NAME=google-maps-api-key
# 本番環境ではfalseにしてコストを抑えることも可能
GEOCODING_ENABLED=true
# キャッシュを有効にして重複リクエストを削減
GEOCODING_CACHE_ENABLED=true
# Google Maps APIのレート制限（リクエスト/秒）
GEOCODING_RATE_LIMIT=50

# Scraping Configuration
# 対象都道府県コード（カンマ区切り: 08,13,27）
TARGET_PREFECTURES=08,23,29
SCRAPING_TIMEOUT=20
SCRAPING_RETRY=3
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; IIBA-KosodateScraper/1.0)

# Slack Notifications
# Slack Webhook URLはSecret Managerで管理
SLACK_WEBHOOK_SECRET_NAME=slack-webhook-url
SLACK_CHANNEL=#kosodate-scraper-notifications
SLACK_ENABLED=true

# Logging
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
GCP_LOGGING_ENABLED=true

# Cloud Run (本番環境用)
PORT=8080

# ローカル開発用
# Google Maps API Key（ローカルテスト用のみ）
# GOOGLE_MAPS_API_KEY=your-local-api-key
