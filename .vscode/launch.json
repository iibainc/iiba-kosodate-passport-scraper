{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "FastAPI Server (Development)",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "src.server:app",
        "--reload",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--log-level",
        "debug"
      ],
      "jinja": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env.development",
      "console": "integratedTerminal"
    },
    {
      "name": "Scrape Ibaraki (Debug)",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/run_scraping.py",
      "args": ["--prefecture", "08", "--debug"],
      "jinja": true,
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env.development",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "envFile": "${workspaceFolder}/.env.development"
    }
  ]
}