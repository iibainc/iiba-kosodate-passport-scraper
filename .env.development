# ローカル開発環境用の環境変数

# 環境設定
ENVIRONMENT=development
PROJECT_NAME=iiba-kosodate-passport-scraper
LOG_LEVEL=DEBUG

# GCP設定（ローカル開発ではエミュレータを使用）
GCP_PROJECT_ID=local-dev
FIRESTORE_EMULATOR_HOST=localhost:8080
FIRESTORE_DATABASE_ID=(default)

# Cloud Storage（ローカルスタブ用）
GCS_BUCKET_NAME=local-dev-bucket
GCS_CSV_PREFIX=csv_exports/

# サーバー設定
PORT=8000
HOST=0.0.0.0

# スクレイピング設定
SCRAPING_TIMEOUT=30
SCRAPING_RETRY=3
SCRAPING_USER_AGENT=Mozilla/5.0 (compatible; KosodatePassportScraper/1.0)

# 対象都道府県（カンマ区切り）
TARGET_PREFECTURES=08,13,23,25,29,27  # 茨城県、愛知県、奈良県

# ジオコーディング設定
GEOCODING_ENABLED=false  # ローカル開発ではAPI呼び出しを無効化
GEOCODING_CACHE_ENABLED=true
GEOCODING_RATE_LIMIT=10
GOOGLE_MAPS_API_KEY=  # 空の場合はジオコーディングをスキップ

# Slack通知設定
SLACK_ENABLED=false  # ローカル開発では通知を無効化
SLACK_WEBHOOK_URL=
SLACK_CHANNEL=#kosodate-scraper-dev

# Secret Manager設定（ローカル開発では不要）
GOOGLE_MAPS_API_KEY_SECRET_NAME=google-maps-api-key
SLACK_WEBHOOK_SECRET_NAME=slack-webhook-url
